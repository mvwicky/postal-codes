{
  "deno.enable": true,
  "deno.lint": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.db": true,
    "data": true,
    "_data": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "json.schemas": [
    { "fileMatch": ["postal-codes.config.json"], "url": "./config-schema.json" }
  ]
}
